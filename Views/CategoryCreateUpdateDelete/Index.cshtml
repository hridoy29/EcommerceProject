@model IEnumerable<Project_497.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/LayoutPage.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<div style="padding:50px"></div>
<p style="font-size:larger; padding:10px; font-weight:900">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="custome-div table table-bordered table-condensed table-responsive table-hover table-striped" style="background-color:rgb(123,209,209)">
    <tr>
       
        <th class="text-center text-success" style="font-weight:900">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center text-primary">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td class="text-center text-primary">
                @Html.ActionLink("Edit", "Edit", new { id = item.categoryId },new { @class = "btn btn-warning btn-large" }) 
                @Html.ActionLink("Details", "Details", new { id = item.categoryId }, new { @class = "btn btn-default btn-large" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.categoryId }, new { @class = "btn btn-danger btn-large" })
            </td>
        </tr>
    }

</table>
